	<li class="light-blue">
		<%= link_to 'Admin', users_path %>
	</li>
	<% end %>
	<% else %>
	<li class="light-blue">
		<%= link_to 'Login', new_user_session_path %>
	</li>
	<li class="light-blue">
		<%= link_to 'Sign up', new_user_registration_path %>
	</li>
	<% end %>	
