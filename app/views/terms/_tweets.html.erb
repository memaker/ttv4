<% if tweets %>
<table id="table_tweets" class="table table-striped">
	<thead>
		<tr>
			<th width="10%">Tweeted at</th>
			<th width="10%">User</th>
			<th width="10%">Gender</th>
			<th width="50%">Text</th>
			<th width="5%">Lead</th>
			<th width="5%">Action</th>			
		</tr>
	</thead>
	<tbody>
		<% tweets.each do |tweet| %>
		<tr>
			<td><%= tweet.tweeted_at.to_date %></td>
            <td><%= link_to "#{tweet.screen_name}", "http://twitter.com/#{tweet.screen_name}" %></td>
			<td><%= tweet.gender %></td>
			<td><%= tweet.text %></td>
			<td><%= tweet.lead %></td>
			<td><%= link_to 'Destroy', :controller => 'terms', :action => 'delete_lead', :screen_name => tweet.screen_name %></td>
		</tr>
		<% end %>
	</tbody>
</table>

