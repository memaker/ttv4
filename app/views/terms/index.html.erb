<div id="sidebar">
	<ul class="nav nav-list">
		<li>
			<%= link_to raw("#{'<span>Terms</span>'}"), terms_path %>			
		</li>

		<li>
			<a href="#">				
				<span>Help</span>
			</a>
		</li>		
	</ul><!--/.nav-list-->

	<div id="sidebar-collapse">
		<i class="icon-double-angle-left"></i>
	</div>
</div>
<div id="main-content" class="clearfix">
	<div id="breadcrumbs">
		<ul class="breadcrumb">
			<li>
				<i class="icon-home"></i>
				<%= link_to "Home", root_path %>				

				<span class="divider">
					<i class="icon-angle-right"></i>
				</span>
			</li>
			<li class="active">Terms</li>
		</ul><!--.breadcrumb-->
		
		<div class="span2 pull-right">
			<%= link_to "+ New", new_term_path, :class=>"btn" %>
		</div>		
	</div>
	<div id="page-content" class="clearfix">
		<div class="page-header position-relative">
			<h1>
				Terms
				<small>
					<i class="icon-double-angle-right"></i>
					Management
				</small>
			</h1>
		</div><!--/.page-header-->
		<div class="row-fluid">			
			<div class="span12">
				<table id="table_report" class="table table-striped table-bordered table-hover">			
					<thead>
						<tr>
							<th>Description</th>
							<th>Keywords</th>
							<th>
								<i class="icon-time"></i>
								Creation date
							</th>						
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<% my_terms.each do |term| %>
						<tr>
							<td><%= link_to term.description, term %></td>
							<td><%= term.keywords %></td>
							<td><%= term.created_at.to_date %></td>
							<td class="td-actions">
								<div class="hidden-phone visible-desktop btn-group">								
									<%= link_to raw("#{'<i class="icon-edit bigger-120"></i>'}"), edit_term_path(term), :class => 'btn btn-mini btn-info'%>
									<%= link_to(raw("#{'<i class="icon-trash bigger-120"></i>'}"), term_path(term), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger') %>
									<%= link_to raw("#{'<i class="icon-flag bigger-120"></i>'}"), showlist_term_path(term), :class => 'btn btn-mini btn-warning'%>
								</div>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function() {
		var oTable1 = $('#table_report').dataTable( {
		"aoColumns": [	      
	      null, null,null,
		  { "bSortable": false }
		] } );		
	})
</script>
