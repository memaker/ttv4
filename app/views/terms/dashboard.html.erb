<div id="sidebar">
  <%= render :partial => 'layouts/left_menu' %>
</div>
<div id="main-content" class="clearfix">
  <div id="page-content" class="clearfix">
    <div class="page-header position-relative">
      <h1 class="span9">
        Terms
        <small>
          <i class="icon-double-angle-right"></i>
          Dashboard
        </small>
      </h1>
    </div>
    <!--/.page-header-->
    <div class="row-fluid">
      <div class="span12">
        <%= render :partial => 'layouts/navigation_menu' %>
        <div class="tabbable">
          <ul class="nav nav-tabs" id="myTab">
            <li class="active">
              <a data-toggle="tab" href="#tweets">
                <i class="green icon-home bigger-110"></i>
                Tweets
              </a>
            </li>
            <li>
              <a data-toggle="tab" href="#datetime">
                Datetime
              </a>
            </li>
            <li>
              <a data-toggle="tab" href="#location">
                Location
              </a>
            </li>
            <li>
              <a data-toggle="tab" href="#gender">
                Gender
              </a>
            </li>
            <li>
              <a data-toggle="tab" href="#leads">
                Leads
                <span class="badge badge-danger">4</span>
              </a>
            </li>
          </ul>

          <div class="tab-content">
            <div id="tweets" class="tab-pane in active">
              <% if @tweets %>
                  <table id="tweetstable" class="display">
                    <thead>
                    <tr>
                      <th>Tweeted at</th>
                      <th>User</th>
                      <th>Gender</th>
                      <th>Text</th>
                      <th>Lead</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @tweets.each do |tweet| %>
                        <tr>
                          <td><%= tweet.tweeted_at.to_date %></td>
                          <td><%= tweet.username %></td>
                          <td><%= tweet.gender %></td>
                          <td><%= tweet.text %></td>
                          <td><%= tweet.lead %></td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
              <% end %>
            </div>

            <div id="datetime" class="tab-pane">
              <p>This should contain the timeline graph, as described on the showdatetime.html.erb</p>
            </div>

            <div id="location" class="tab-pane">
              <p>This should contain the map view, as described on showlocation.html.erb </p>
            </div>

            <div id="gender" class="tab-pane">
              <p>This should contain the gender graph as in showgender</p>
            </div>

            <div id="leads" class="tab-pane">
              <p>This contains the list of leads</p>
            </div>
          </div>
        </div>
      </div>
      <!-- /span -->
    </div>
  </div>
</div>
