<div id="login-box" class="visible widget-box no-border">
	<div class="widget-body">
		<div class="widget-main">
			<h4 class="header blue lighter bigger">
				<i class="icon-coffee green"></i>
				Please Enter Your Information
			</h4>

			<div class="space-6"></div>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<fieldset>
					<label>
						<span class="block input-icon input-icon-right">
							<%= f.email_field :email, :class => 'span12', :placeholder => "User Email" %>							
							<i class="icon-user"></i>
						</span>
					</label>

					<label>
						<span class="block input-icon input-icon-right">
							<%= f.password_field :password, :class => 'span12', :placeholder => "Password" %>							
							<i class="icon-lock"></i>
						</span>
					</label>

					<div class="space"></div>

					<div class="row-fluid">
						<label class="span8">
							<% if devise_mapping.rememberable? -%>
						    	<%= f.check_box :remember_me %> <%= f.label :remember_me, "Remember Me",:class => "lbl" %>
						  	<% end -%>														
						</label>

						<%= button_tag(type: 'submit', :class => 'span4 btn btn-small btn-primary') do %>
							<i class="icon-key"></i> Login
						<% end %>						
					</div>
				</fieldset>
			<% end %>
		</div><!--/widget-main-->
		
		<div class="toolbar clearfix">
			<%= render "devise/shared/links" %>			
		</div>
	</div><!--/widget-body-->
</div><!--/login-box-->	
